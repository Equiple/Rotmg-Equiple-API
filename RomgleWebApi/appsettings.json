{
  "RotmgleDatabase": {
    "DatabaseName": "equiple",
    "ItemCollectionName": "items",
    "DailyCollectionName": "dailies",
    "PlayerCollectionName": "players",
    "ComplaintCollectionName": "complaints" 
  },
  "TokenAuthentication": {
    "RefreshTokenRequestPath": "Authentication/RefreshAccessToken",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays": 30
  },
  "TokenAuthenticationStorage": {
    "DatabaseName": "auth",
    "SessionCollectionName": "sessions"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
