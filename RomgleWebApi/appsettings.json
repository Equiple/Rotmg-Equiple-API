{
  "RotmgleDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "rotmgle",
    "ItemsCollectionName": "items",
    "DailiesCollectionName": "dailies",
    "PlayersCollectionName": "players"
  },
  "TokenAuthorization": {
    "Issuer": "RotmgEquipleAPI",
    "Audience": "RotmgEquipleClient",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays":  7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
